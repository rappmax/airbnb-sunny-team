<!-- Show new created offer
 -->
<div class="container mt-3 pt-3 w-100 h-100">
  <div class="row">
    <div class="col-12 col-md-6 offset-md-3 ml-5">
      <div class="card-product">

        <div class ="img img-offer">
          <%= cl_image_tag @table.picture.key, crop: :fill %>
        </div>

        <div class="card-product-infos d-flex flex-column justify-content-center h-100 w-100 pb-0">
          <h2><%= @table.name %></h2>
           <div>
              <% if user_signed_in? %>
               <%= cl_image_tag current_user.user_picture, class:"avatar-bordered" %>
              <% end %>
           </div>

          <p><b> Description:</b></p>
          <p class="mt-1"> <%= @table.description %></p>
          <p class="mt-3"><b>Adress:</b>
          <p class="mt-0"> <%= @table.address %></p>
<!--           <p class="mt-0"><%= @table.user.email %></p>
 -->
          <div class="d-flex justify-content-between align-items-center inline-block">
            <div>
              <p class="pb-1 mt-3">Player level:</p>
              <div class="clip-star"></div>
              <div class="clip-star"></div>
              <div class="clip-star"></div>
              <div class="clip-star"></div>
              <div class="clip-star"></div>
              <div class="link">
                <%= link_to "Back to home", tables_path %>
                          <%= simple_form_for [@table, @booking] do |f| %>
            <%= f.submit "Submit", class:'btn btn-primary w-100' %>
          <% end %>
              </div>
            </div>
           <!--  <div class="">
              <a class="btn btn-chat mb-1" href="#">Start chat<%@table.user.email%></a>
              <a class="btn btn-flat mb-1" href="#">Book game</a>
            </div> -->
          </div>
        </div>
      </div>

    </div>
  </div>
</div>



